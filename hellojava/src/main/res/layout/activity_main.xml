<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">

    <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

    <Button
            android:text="Load Html Page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnLoad"
            android:onClick="loadHtmlPage"
    />

    <Button
            android:text="Connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnConnect"/>
    <Button
            android:text="disconnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnDisconnect"/>
    <Button
            android:text="Call JS"
            android:onClick="callJs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button3"/>
</LinearLayout>